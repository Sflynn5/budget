<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Enter Details"
        android:textSize="30dp" />
    <EditText
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Total Budget"
        android:id="@+id/totalbudget"
        android:textSize="20dp" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Sub-Budget for Groceries"
        android:id="@+id/subbudget1"
        android:textSize="20dp" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Sub-Budget for Travelling"
        android:id="@+id/subbudget2"
        android:textSize="20dp" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Sub-Budget for Partying"
        android:id="@+id/subbudget3"
        android:textSize="20dp" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Sub-Budget Misc"
        android:id="@+id/subbudget4"
        android:textSize="20dp" />
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1265c4"
        android:id="@+id/submit"
        android:text="Submit"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAllCaps="false"/>


</LinearLayout>